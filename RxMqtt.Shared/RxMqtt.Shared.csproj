<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net46;netcoreapp2.0</TargetFrameworks>
    <Platforms>AnyCPU;x64;ARM</Platforms>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.2.0.3</Version>
    <Description>Interfaces and shared models for RxMqtt client and broker</Description>
    <LangVersion>7.1</LangVersion>
    <AssemblyVersion>1.2.0.3</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Messages\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NLog" Version="4.6.3" />
    <PackageReference Include="System.Net.Sockets" Version="4.3.0" />
    <PackageReference Include="System.Reactive" Version="4.1.5" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="dotnet pack" />
  </Target>
  
          <PropertyGroup>
          <DebugType>Full</DebugType>
          <FileVersion>1.2.0.3</FileVersion>
        </PropertyGroup>

</Project>
